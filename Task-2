def number_pyramid(rows):
    # Loop through the number of rows
    for i in range(1, rows + 1):
        # Print spaces to center-align the pyramid
        print(" " * (rows - i), end="")
        # Print numbers in increasing order up to i
        for j in range(1, i + 1):
            print(j, end=" ")
        # Move to the next line after each row
        print()

# Set the number of rows for the pyramid
rows = 5
number_pyramid(rows)

